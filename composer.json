{
  "name": "msbios/theme",
  "description": "MSBios Theme",
  "license": "GPL",
  "keywords": [
    "php"
  ],
  "homepage": "https://github.com/msbios/msbios-theme",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Judzhin Miles",
      "email": "info@msbios.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "MSBios\\Theme\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MSBiosTest\\Theme\\": "tests/"
    }
  },
  "require": {
    "msbios/widget": "^1.0",
    "msbios/assetic": "^1.0",
    "msbios/stdlib": "^1.0",
    "msbios/i18n": "^1.0"
  },
  "require-dev": {
    "msbios/test": "^1.0",
    "msbios/debug": "^1.0"
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": [
      "@cs-check",
      "phpunit --colors=always"
    ],
    "themes": "cd bin && ln -s ../themes/default/public default",
    "serve": "php -S 0.0.0.0:3107 -t bin bin/msbios-theme-module.php",
    "commit": "git add . && git commit -a -m \"Lazy Composer Commiter\" && git push",
    "deploy": [
      "@themes"
    ],
    "cache":[
      "rm -Rf data/cache/*.php",
      "rm -Rf data/cache/*.dat",
      "rm -Rf data/logs/*.log"
    ],
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  },
  "extra": {
    "zf": {
      "component": "MSBios\\Theme"
    }
  }
}
